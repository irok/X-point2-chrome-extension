{
  "manifest_version": 2,
  "name": "X-point2 Chrome Extension",
  "version": "1.2.2",
  "description": "【GMOメディア社向け】X-point2のChrome拡張です。",
  "author": "irok",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon48.png",
    "default_title": "X-point2",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://xpt.gmo-media.jp/*"],
      "js": ["js/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "https://xpt.gmo-media.jp/",
    "alarms",
    "storage"
  ]
}
