{
  "manifest_version": 2,
  "name": "X-point2 Chrome Extension",
  "version": "1.0.0",
  "description": "X-point2の自社向けChrome拡張です。",
  "author": "irok",
  "icons": {
    "48":  "img/icon48.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon48.png",
    "default_title": "X-point2",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "https://xpt.gmo-media.jp/",
    "storage"
  ]
}
